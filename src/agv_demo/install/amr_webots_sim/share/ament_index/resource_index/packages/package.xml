<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>amr_webots_sim</name>
  <version>0.1.0</version>
  <description>
    A ROS2 package for simulating Autonomous Mobile Robots (AMRs) with mecanum wheels in Webots.
    Provides basic control and movement capabilities for multiple robots.
  </description>
  
  <maintainer email="your_email@example.com">your_name</maintainer>
  <license>Apache License 2.0</license>
  
  <url type="website">https://github.com/yourusername/amr_webots_sim</url>

  <buildtool_depend>ament_python</buildtool_depend>
  
  <!-- ROS2 Dependencies -->
  <depend>rclpy</depend>
  <depend>geometry_msgs</depend>
  <depend>nav_msgs</depend>
  
  <!-- Webots Dependencies -->
  <depend>webots_ros2_driver</depend>
  <depend>webots_ros2_core</depend>
  
  <!-- Additional dependencies -->
  <depend>launch</depend>
  <depend>launch_ros</depend>
  <exec_depend>python3-flask</exec_depend>

  <!-- Test Dependencies -->
  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>
  <test_depend>python3-pytest</test_depend>

  <export>
    <build_type>ament_python</build_type>
  </export>
</package>
